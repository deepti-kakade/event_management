<%- model_class = CompanyAdmin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:encrypted_password) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_token) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_sent_at) %></th>
      <th><%= model_class.human_attribute_name(:remember_created_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:member_type) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @company_admins.each do |company_admin| %>
      <tr>
        <td><%= link_to company_admin.id, company_admin_path(company_admin) %></td>
        <td><%= company_admin.email %></td>
        <td><%= company_admin.encrypted_password %></td>
        <td><%= company_admin.reset_password_token %></td>
        <td><%= company_admin.reset_password_sent_at %></td>
        <td><%= company_admin.remember_created_at %></td>
        <td><%= company_admin.current_sign_in_at %></td>
        <td><%= company_admin.last_sign_in_at %></td>
        <td><%= company_admin.current_sign_in_ip %></td>
        <td><%= company_admin.last_sign_in_ip %></td>
        <td><%= company_admin.first_name %></td>
        <td><%= company_admin.last_name %></td>
        <td><%= company_admin.member_type %></td>
        <td><%= company_admin.company_id %></td>
        <td><%=l company_admin.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_company_admin_path(company_admin), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      company_admin_path(company_admin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_admin_path,
            :class => 'btn btn-primary' %>
