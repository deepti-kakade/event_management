<div id="mymodal1" class="modal hide fade in" aria-hidden="true" style = "display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
  </div>

  <div class="modal-body">
    <div id="company_view" >
    <fieldset>
      <legend>CompanyDetails</legend>
      <table id="show_table" class="view_cause_table">

        <tr>
          <td>Company Name</td>
          <td><%=  company.company_name%> </td>
        </tr>

        <tr>
          <td>Office Location</td>
          <td><%=  company.location %></td>
        </tr>

        <tr>
          <td>Logo</td>
          <td><%=  image_tag(company.logo) %></td>
        </tr>

        <tr>
          <td>Type of company</td>
          <td><%=  company.type_of_company %></td>
        </tr>
        <tr>
          <td>Company Admin Email</td>
          <td><%=  company_admin.email %></td>
        </tr>
      </table>
      <%#= link_to "Back", show_admin_dashboard_admins_path, :class => "btn btn-large btn-primary" ,id:"create_cause_btn" %>
    </fieldset>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>